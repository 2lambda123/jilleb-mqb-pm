<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/accent</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="themedCarBackground">@drawable/background_incar_black</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AppTheme.Car" parent="@style/CarAppTheme" tools:ignore="PrivateResource">
        <item name="themedCarBackground">@drawable/background_incar_black</item>
        <item name="android:forceDarkAllowed">false</item>


    </style>

    <style name="AppTheme.Car.Speedometer">
        <item name="themedCarBackground">@drawable/background_incar_black</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="sv_backgroundCircleColor">@android:color/transparent</item>
        <item name="sv_centerCircleColor">@android:color/transparent</item>
        <item name="sv_markColor">@android:color/transparent</item>
        <item name="sv_speedTextColor">@color/car_primary</item>
        <item name="sv_speedTextPadding">50dp</item>
        <item name="sv_speedTextPosition">CENTER</item>
        <item name="sv_speedTextSize">32sp</item>
        <item name="sv_textColor">@android:color/transparent</item>
        <item name="sv_textSize">12sp</item>
        <item name="sv_unit"></item>
        <item name="sv_unitSpeedInterval">4dp</item>
        <item name="sv_unitTextColor">@color/car_primary</item>
        <item name="sv_unitTextSize">20sp</item>
        <item name="sv_unitUnderSpeedText">true</item>
        <item name="sv_withTremble">false</item>
        <item name="android:elevation">0dp</item>
        <item name="sv_indicator">NormalIndicator</item>
        <item name="sv_indicatorColor">@android:color/transparent</item>
        <item name="sv_indicatorWidth">4dp</item>
        <item name="sv_tickPadding">45dp</item>
        <item name="sv_tickRotation">false</item>
        <item name="sv_markHeight">10dp</item>
    </style>

