    <style name="AppTheme.Car.Gear">
        <item name="android:textColor">@color/car_body1_inverted</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/gear_indicator_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Car.Speedometer">
        <item name="sv_indicatorWidth">8dp</item>
        <item name="sv_lowSpeedPercent">85</item>
        <item name="sv_mediumSpeedPercent">85</item>
        <item name="sv_speedTextColor">@color/car_primary</item>
        <item name="sv_speedTextSize">32sp</item>
        <item name="sv_speedometerWidth">16dp</item>
        <item name="sv_textColor">@android:color/transparent</item>
        <item name="sv_textSize">12sp</item>
        <item name="sv_unitSpeedInterval">4dp</item>
        <item name="sv_unitTextColor">@color/car_primary</item>
        <item name="sv_unitTextSize">12sp</item>
        <item name="sv_unitUnderSpeedText">true</item>
        <item name="sv_withTremble">false</item>
        <item name="sv_backgroundCircleColor">@android:color/transparent</item>
        <item name="sv_centerCircleColor">@android:color/transparent</item>
        <item name="sv_highSpeedColor">@android:color/transparent</item>
        <item name="sv_mediumSpeedColor">@android:color/transparent</item>
        <item name="sv_lowSpeedColor">@android:color/transparent</item>


    </style>

    <style name="AppTheme.Car.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_vertical_material_car</item>
        <item name="android:minWidth">@dimen/progress_bar_height_material_car</item>
        <item name="android:maxWidth">@dimen/progress_bar_height_material_car</item>
