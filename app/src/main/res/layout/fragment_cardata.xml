<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otherdata"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="321dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVIN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="VIN"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtWarning_0_WarnID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_0_WarnID"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtWarning_0_dynamicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_0_dynamicValue"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtWarning_1_WarnID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_1_WarnID"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtWarning_1_dynamicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_1_dynamicValue"
                android:textAppearance="@style/CarBody2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtWarning_2_WarnID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_2_WarnID"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtWarning_2_dynamicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car_vehicleState_Warning_2_dynamicValue"
                android:textAppearance="@style/CarBody2" />

            <TextView
                android:id="@+id/txtOdometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Odometer"
                android:textAppearance="@style/CarBody2" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>